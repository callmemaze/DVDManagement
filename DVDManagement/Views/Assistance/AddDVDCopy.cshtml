@{
    ViewData["Title"] = "AddDVDCopy";
    Layout = "_Layout";
}

<h1>AddDVDCopy</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Assistance" asp-action="AddDVDCopy" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-sm">
                @*   <div class="form-group">
                    <label for="ActorSurName" class="control-label"></label>
                    <select id="surname" name="surname" class="form-control custom-select bg-white border-left-0 border-md" required>
